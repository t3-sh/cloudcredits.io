---
import Base from "@/layouts/Base.astro";
import AnimatedBackground from "@/layouts/components/AnimatedBackground";
import { getCollection } from "astro:content";
import ProgramCard from "@/layouts/components/ProgramCard.astro";
import { motion } from "framer-motion";
import { getCanonicalFromAstroURL } from "@/lib/utils/canonical";

const allPrograms = await getCollection("programs");

const requiredTags = new Set(["ai", "education"]);
const coreSlugs = new Set([
  "elevenlabs",
  "cursor",
  "playai",
  "namecheap",
  "jotform",
]);

const studentPrograms = allPrograms.filter((p) => {
  const tags = (p.data.tags as string[] | undefined) || [];
  const hasBoth = Array.from(requiredTags).every((t) => tags.includes(t));
  const mentionsStudent = /student|students/i.test(
    `${p.data.title || ""} ${p.data.description || ""}`,
  );
  return hasBoth || mentionsStudent;
});

const corePrograms = studentPrograms
  .filter((p) => coreSlugs.has(p.data.provider_slug as string))
  .sort((a, b) => (b.data.max_value || 0) - (a.data.max_value || 0));

const relatedPrograms = studentPrograms.filter(
  (p) => !coreSlugs.has(p.data.provider_slug as string),
);

const canonical = getCanonicalFromAstroURL(Astro.url);
---

<Base
  title="Free AI tools for students (2025) — Practical picks"
  meta_title="Free AI tools for students — study, create, and build on a budget"
  description="A focused list of free AI tools for students: bundles, learning tools, and student plans that help you study, create, and build without overspending."
  canonical={canonical}
>
  <AnimatedBackground client:load />

  <section
    class="min-h-[60vh] flex flex-col items-center justify-center text-center px-6"
  >
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
      Free AI tools for students
    </h1>
    <p
      class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-3xl mb-6"
    >
      Straightforward options that actually help with study workflows and
      projects. No hype, no fluff.
    </p>
    <div class="flex flex-wrap gap-3 justify-center">
      <a
        href="#programs"
        class="btn bg-primary text-white px-6 py-3 rounded-md hover:bg-opacity-90"
        >See tools</a
      >
      <a
        href="#how-it-works"
        class="btn border border-gray-600 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
        >How to choose</a
      >
    </div>
  </section>

  <section id="programs" class="section py-12">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
        Student-friendly AI programs
      </h2>
      <p
        class="text-center text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-10"
      >
        These include student-only free plans, bundles, or sizable discounts
        that are useful for study, content, and projects.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          corePrograms.map((program, index) => (
            <motion.div
              client:load
              key={program.id}
              initial={{ opacity: 0, y: 40 }}
              whileInView={{ opacity: 1, y: 0 }}
              viewport={{ once: true, amount: 0.3 }}
              transition={{ duration: 0.45, delay: index * 0.05 }}
            >
              <ProgramCard program={program} />
            </motion.div>
          ))
        }
      </div>

      <div class="mt-12 grid gap-4 max-w-3xl mx-auto">
        <div
          class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-sm text-blue-900 dark:text-blue-100"
        >
          Tip: Verify with a school email when possible (.edu or institutional).
          Claims may be limited or first-come-first-served.
        </div>
      </div>
    </div>
  </section>

  <section id="how-it-works" class="section py-12 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
        How to choose (quick take)
      </h2>
      <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-8">
        <div
          class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Start with what you’ll use</h3>
          <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
            <li>Pick one tool for notes or reading, one for creation</li>
            <li>Use built-in templates over custom workflows</li>
            <li>Schedule a weekly review to keep usage intentional</li>
            <li>Watch quotas and expiry dates</li>
          </ul>
        </div>
        <div
          class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Expand when needed</h3>
          <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
            <li>Add specialized tools (speech, code, design) for projects</li>
            <li>Keep accounts to a minimum to avoid lock-in</li>
            <li>Check student bundles before paying retail</li>
            <li>Prioritize privacy for school submissions</li>
          </ul>
        </div>
      </div>

      <div
        class="max-w-3xl mx-auto mt-10 text-sm text-gray-600 dark:text-gray-400 text-center"
      >
        Offer terms change. Always confirm on the official page before applying
        or upgrading.
      </div>
    </div>
  </section>

  {
    relatedPrograms.length > 0 && (
      <section class="section py-12">
        <div class="container mx-auto px-6">
          <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
            Related education offers
          </h2>
          <p class="text-center text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10">
            Useful non-core education discounts that often pair well with AI
            tools.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedPrograms.map((program, index) => (
              <motion.div
                client:load
                key={program.id}
                initial={{ opacity: 0, y: 40 }}
                whileInView={{ opacity: 1, y: 0 }}
                viewport={{ once: true, amount: 0.3 }}
                transition={{ duration: 0.45, delay: index * 0.05 }}
              >
                <ProgramCard program={program} />
              </motion.div>
            ))}
          </div>
        </div>
      </section>
    )
  }
</Base>
