---
import Base from "@/layouts/Base.astro";
import AnimatedBackground from "@/layouts/components/AnimatedBackground";
import { getCollection } from "astro:content";
import ProgramCard from "@/layouts/components/ProgramCard.astro";
import { motion } from "framer-motion";
import { getCanonicalFromAstroURL } from "@/lib/utils/canonical";

const allPrograms = await getCollection("programs");

const gcpPrograms = allPrograms
  .filter((p) => p.data.provider_slug === "gcp")
  .sort((a, b) => (b.data.max_value || 0) - (a.data.max_value || 0));

const relatedPrograms = allPrograms.filter((p) =>
  ["googleads", "googally"].includes(p.data.provider_slug),
);

const canonical = getCanonicalFromAstroURL(Astro.url);
---

<Base
  title="Google Cloud Credits for Startups (2025) — Simple Guide"
  meta_title="Google Cloud credits for startups — how to get $2K–$200K + $300 trial"
  description="A no-fluff guide for solo founders and small teams on getting Google Cloud credits: Google for Startups (Start/Scale), AI & Web3 tracks, and the $300 free trial."
  canonical={canonical}
>
  <AnimatedBackground client:load />

  <section
    class="min-h-[60vh] flex flex-col items-center justify-center text-center px-6"
  >
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
      Google Cloud credits for startups
    </h1>
    <p
      class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-3xl mb-6"
    >
      Straightforward paths to real Google Cloud credits. Built for solo
      founders, indie devs, small teams.
    </p>
    <div class="flex flex-wrap gap-3 justify-center">
      <a
        href="#programs"
        class="btn bg-primary text-white px-6 py-3 rounded-md hover:bg-opacity-90"
        >See programs</a
      >
      <a
        href="#how-it-works"
        class="btn border border-gray-600 text-gray-700 dark:text-gray-300 px-6 py-3 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800"
        >How it works</a
      >
    </div>
  </section>

  <section id="programs" class="section py-12">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
        Google for Startups Cloud Program
      </h2>
      <p
        class="text-center text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-10"
      >
        These are the official Google Cloud startup tracks. Eligibility and
        amounts vary by stage. No hype, just what’s available.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          gcpPrograms.map((program, index) => (
            <motion.div
              client:load
              key={program.id}
              initial={{ opacity: 0, y: 40 }}
              whileInView={{ opacity: 1, y: 0 }}
              viewport={{ once: true, amount: 0.3 }}
              transition={{ duration: 0.45, delay: index * 0.05 }}
            >
              <ProgramCard program={program} />
            </motion.div>
          ))
        }
      </div>

      <div class="mt-12 grid gap-4 max-w-3xl mx-auto">
        <div
          class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg text-sm text-blue-900 dark:text-blue-100"
        >
          Tip: If you’re totally new to Google Cloud, the $300 free trial is the
          easiest starting point. You can still apply to the startup program
          later.
        </div>
      </div>
    </div>
  </section>

  <section id="how-it-works" class="section py-12 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
        How to qualify (at a glance)
      </h2>
      <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-8">
        <div
          class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Start tier (early stage)</h3>
          <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
            <li>AI or product-focused startup, often pre-seed</li>
            <li>Founded within ~5 years</li>
            <li>No prior credits beyond the free trial</li>
            <li>Use a domain-based business email</li>
          </ul>
        </div>
        <div
          class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700"
        >
          <h3 class="font-semibold text-lg mb-3">Scale tier (funded)</h3>
          <ul class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
            <li>Seed to Series A with recent equity funding</li>
            <li>Founded within ~10 years</li>
            <li>Within prior-credit limits set by Google Cloud</li>
            <li>Billing account and domain email ready</li>
          </ul>
        </div>
      </div>

      <div
        class="max-w-3xl mx-auto mt-10 text-sm text-gray-600 dark:text-gray-400 text-center"
      >
        Eligibility and review are at Google Cloud’s discretion. Details can
        change—always check the official page before you apply.
      </div>
    </div>
  </section>

  {
    relatedPrograms.length > 0 && (
      <section class="section py-12">
        <div class="container mx-auto px-6">
          <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">
            Related Google offers
          </h2>
          <p class="text-center text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10">
            Not cloud credits, but sometimes handy while you’re getting started.
          </p>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedPrograms.map((program, index) => (
              <motion.div
                client:load
                key={program.id}
                initial={{ opacity: 0, y: 40 }}
                whileInView={{ opacity: 1, y: 0 }}
                viewport={{ once: true, amount: 0.3 }}
                transition={{ duration: 0.45, delay: index * 0.05 }}
              >
                <ProgramCard program={program} />
              </motion.div>
            ))}
          </div>
        </div>
      </section>
    )
  }
</Base>
