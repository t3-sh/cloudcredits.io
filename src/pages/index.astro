---
import Base from "@/layouts/Base.astro";
import HeroSection from "@/layouts/components/HeroSection";
import AnimatedBackground from "@/layouts/components/AnimatedBackground";
import { getCollection } from "astro:content";
import ProgramCard from "@/layouts/components/ProgramCard.astro";
import { motion } from "framer-motion";
import { isFeatureEnabled } from "@/lib/featureFlags";
import { getCanonicalFromAstroURL } from "@/lib/utils/canonical";

const allPrograms = await getCollection("programs");
const featuredProgramTitles = [
  "Deepgram $200 Free Credits",
  "GitHub for Startups",
  "Notion for Startups",
  "Perplexity for Startups",
  "xAI Data Sharing Program",
  "ElevenLabs 3-Month Free Business-Tier",
];
const featuredPrograms = allPrograms.filter((p) =>
  featuredProgramTitles.includes(p.data.title),
);
const rotationAngles = [-3, -1, 2, 1, -2, 3];
const askAIEnabled = isFeatureEnabled("askAI");
const canonical = getCanonicalFromAstroURL(Astro.url);
---

<Base
  title="Best Startup Tools & Credits - Free Open Source Vault | CloudCredits.io"
  meta_title="Startup Tools & Credits - 200+ Free Deals for Startups | CloudCredits.io"
  description="The biggest open source vault of startup tools, business software deals & credits. 200+ verified programs worth $2M+ including AWS, Google Cloud, SaaS tools. Zero ads, zero affiliates."
  canonical={canonical}
>
  <!-- JSON-LD Structured Data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      name: "CloudCredits.io",
      alternateName: "Best Startup Tools & Credits Vault",
      url: "https://cloudcredits.io",
