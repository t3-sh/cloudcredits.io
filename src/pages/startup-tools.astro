---
import Base from "@/layouts/Base.astro";
import HeroSection from "@/layouts/components/HeroSection";
import AnimatedBackground from "@/layouts/components/AnimatedBackground";
import { getCollection } from "astro:content";
import ProgramCard from "@/layouts/components/ProgramCard.astro";
import { motion } from "framer-motion";
import { getCanonicalFromAstroURL } from "@/lib/utils/canonical";

// Get startup-focused programs
const allPrograms = await getCollection("programs");
const startupPrograms = allPrograms
  .filter(
    (p) =>
      p.data.title.toLowerCase().includes("startup") ||
      p.data.intro.toLowerCase().includes("startup") ||
      p.data.tags?.some((tag) =>
        ["dev tools", "productivity", "saas", "crm", "marketing"].includes(tag),
      ),
  )
  .slice(0, 12);

const canonical = getCanonicalFromAstroURL(Astro.url);
---

<Base
  title="Best Startup Tools 2025 - Free Software & SaaS Deals | CloudCredits.io"
  meta_title="Startup Tools 2025 - 200+ Free Software Deals & SaaS Credits"
  description="Discover the best startup tools and software deals for 2025. 200+ verified programs including dev tools, marketing software, CRM systems, and productivity apps. All free and open source."
  canonical={canonical}
