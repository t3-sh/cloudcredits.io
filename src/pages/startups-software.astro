import ProgramCard from "@/layouts/components/ProgramCard.astro";
import { motion } from "framer-motion";
import { getCanonicalFromAstroURL } from "@/lib/utils/canonical";

// Get software-focused programs
const allPrograms = await getCollection("programs");
const softwarePrograms = allPrograms
  .filter(
    (p) =>
      p.data.tags?.some((tag) =>
        [
          "saas",
          "dev tools",
          "productivity",
          "design",
          "collaboration",
          "automation",
          "no-code",
          "low-code",
        ].includes(tag),
      ) ||
      p.data.title.toLowerCase().includes("software") ||
      p.data.intro.toLowerCase().includes("software") ||
      p.data.description.toLowerCase().includes("software"),
  )
  .slice(0, 18);

const canonical = getCanonicalFromAstroURL(Astro.url);
